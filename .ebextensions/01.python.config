packages:
  yum:
    libxml2: []
    libxslt: []
    libxml2-devel: []
    libxslt-devel: []
    libjpeg-devel: '6b'
    zlib-devel: []
    freetype-devel: []
    postgresql-devel: []

container_commands:
  01_install_node:
    command: "yum install -y --enablerepo=epel nodejs"
  02_install_npm:
    command: "yum install -y --enablerepo=epel npm"
  03_install_stylus:
    command: "npm install stylus -g"
  04_collect_static:
    command: "cd app && python manage.py collectstatic --settings=app.settings.testing"

option_settings:
  - namespace: aws:elasticbeanstalk:container:python:staticfiles
    option_name: /static/
    value: static/
  - namespace: aws:elasticbeanstalk:container:python
    option_name: WSGIPath
    value: app/beanstalk.py
  - option_name: DJANGO_SETTINGS_MODULE
    value: app.settings.testing

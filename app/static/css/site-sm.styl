/* catch iPad in landscape */
@media only screen and (max-device-width : 1024px)
  .affix
    position: inherit

  .actions
    font-size 80%!important

@media (max-width: 1200px)
  .actions
    font-size 80%
    height 25px


@media (max-width: 992px)
  #google_translate_element
    margin-top 0px
    margin-left 10px

  .market-place-item
    width: 48.8%
    margin-left 0px
  .hero-text
    font-size 1.3em

  .hidelarge
    display inline

  .hidemobile
    display none!important

  #postman_message
    #back
      visibility visible;
  li.navavatar
    display: none

  .affix
    position: inherit

  #create_offer
    margin-right: 70px;
    margin-left 10px

  /* Reduce collapse point of nav bar */
  .navbar-header
    float: none

  .navbar-toggle
    display: block
    margin-right 20px

  .exchange-filter
    .filterbuttons-cont
      max-height none
      height auto
      overflow auto
      padding-left 20px
      padding-right 10px
    .market-filter-main
      .market-filter-border
        border: 0px

  .filter-toggle-button
    margin-top 5px
    margin-right 10px

  .navbar-collapse
    border-top: 1px solid transparent;
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.1)
    max-height: none;

  .navbar-collapse.collapse
    display: none!important

  .navbar-nav
    float: none!important;
    margin: 7.5px -15px

  .navbar-nav>li
    float: none

  .navbar-nav>li>a
    padding-top: 10px
    padding-bottom: 10px

  .navbar-nav .open .dropdown-menu
    background-color: rgba(0, 0, 0, 0);
    border: 0 none;
    box-shadow: none;
    float: none;
    margin-top: 0;
    position: static;
    width: auto;

  .nanamorde
    display none

  .nanamorde-mobile
    margin-bottom 10px
    padding-top 10px
    display block

  #messages-title
    display inline

  .left-on-big
    float none

  .navbar-collapse
    .notification-drop-down
      width 100%!important

  .actions
    font-size 100%
    height 30px


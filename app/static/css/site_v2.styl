    li
      display block
      border-top 1px solid $border-color
      padding 4px
      a
        background url('../images/v2/select_plus.png') 210px center no-repeat
        padding 10px
        width 240px
        height 40px
        display block
        text-decoration none
        color #000
      a:hover
        color #fff
        background $dropdown-hover-bg url('../images/v2/select_plus_hover.png') 210px center no-repeat
      a.selected
        background #fff url('../images/v2/select_tick.png') 210px center no-repeat

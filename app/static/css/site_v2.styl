  .form-title
    text-align center
  .action-text
    margin-top 30px
    text-align center
  .action-link
    line-height 40px
    text-decoration underline
  .form-main-button
    margin-top 15px
  a
    color $main-font
    font-weight bold
    text-decoration underline
  label
    margin-top 10px
    font-family "HurmeGeometricSans3-SemiBold"
    font-weight normal
  input, select, textarea

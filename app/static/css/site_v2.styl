// **************************************
// Sign up styles
// **************************************
.progress-counter
  border-top 2px solid $border-color
  margin-bottom 50px
  position relative
  .progress-item
    position absolute
    top -14px
  .progress-item-description
    font-weight bold
  .complete-state
    text-align center
    font-size 35px
    line-height 25px
    span
      background-color #ffffff
      padding-left 3px
      padding-right 3px
  .step1
    left -20px
  .step2
    left 15%
  .step3
    left 42%
  .step4
    left 70%
  .step5
    right -20px
  .complete
    color $title-font
  .current
    color $main-font
  .outstanding
    color $inactive-font

.form-select-multi
  min-height 250px
  .row
    margin-top 15px
  input[type=checkbox]
    display none

  .select-checkbox
    width 100%
    height 30px
    padding 6px
    border 1px solid $border-color
    box-shadow 0 1px 1px 0 $border-color-alpha
    background-color #fff
    border-radius 3px
    color $inactive-font
    cursor pointer

  .select-checkbox.checked
    box-shadow none
    background-color $third-color
    border none
    color #fff

  .select-checkbox label
    margin 0
    cursor pointer
    position absolute
    width 16px
    height 16px
    border 1px solid $border-color
    background-color #fff

  .select-checkbox label:after
    opacity 0
    content ''
    position absolute
    width 17px
    height 9px
    background transparent
    top -1px
    left 2px
    border 3px solid #fff
    border-top none
    border-right none
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    transform: rotate(-45deg);

  .select-checkbox input[type=checkbox]:checked + label:after
    opacity 1

  .select-checkbox input[type=checkbox]:checked + label
    background-color #0D2E3F
    border 1px solid #0D2E3F

  .select-label
    font-size 12px
    margin-left 23px
    line-height 19px



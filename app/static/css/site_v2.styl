// **************************************
// default colors
// **************************************
$primary-color = #FE6D50
$primary-color-alpha = rgba(254, 109, 80, 0.8)
$secondary-color = #BDB4AF
$background-color = #F8F6F7
$border-color = #E0D7D8
$border-color-alpha = rgba(224, 215, 216, 0.8)
$facebook-blue = #3C5A9A

// **************************************
// font colors
// **************************************
$main-font = #262626
$white-font = #FFFFFF
$title-font = #005E86
$inactive-font = #b7aba5


// **************************************
// some generic functions
// **************************************
vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

::-webkit-input-placeholder
  font-style italic

::-moz-placeholder
  font-style italic

:-ms-input-placeholder
  font-style italic

// **************************************
// form styles
// **************************************
.movements-form
  border-radius 0
  padding 45px 65px 45px 65px
  box-shadow 0 1px 1px 0 $border-color-alpha
  h1
    color $title-font
  h2
    color $main-font
    font-size 20px
  .form-title
    text-align center
  .action-text
    margin-top 30px
    text-align center
  .action-link
    line-height 40px
  .form-main-button
    margin-top 15px
  a
    color $main-font
    font-weight bold
  label
    margin-top 10px
  input[type=text]:focus, input[type=email]:focus, input[type=number]:focus, input[type=password]:focus, select:focus, textarea:focus
    border-color $primary-color-alpha
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.075)// inset, 0 0 8px rgba(254, 109, 80, 0.6)
    outline 0 none
  input[type=text], input[type=email], input[type=number], input[type=password], select
    border-radius 3px
    height 40px

.extended-form
  margin-top 30px
  padding 0 65px 0 65px
  .action-text
    margin-top 30px
    text-align center
  .form-main-button
    margin-top 15px

// **************************************
// button styles
// **************************************

.btn
  border-radius 3px
  padding 9px 12px
  font-weight bold

.btn-action
  background-color $primary-color
  color $white-font

.btn-action:hover, .btn-action:active, .btn-action:focus
  color $white-font

.btn-social-facebook
  background-color $facebook-blue
  color $white-font
  img
    margin-right 10px

.btn-social-facebook:hover, .btn-social-facebook:active, .btn-social-facebook:focus
  color $white-font

// **************************************
// bootstrap overrides
// **************************************
.dialog
  background-color #fff

// **************************************
// base styles
// **************************************

html
  background-color $background-color

body
  background-color $background-color
  color $main-font

.container
  max-width 960px

.navbar-default
  background-color $background-color

.header-nav
  border-radius 0
  border 0
  border-bottom 5px solid $border-color
  .header-nav-wrapper
    text-align center
    .main-logo
      padding-top 15px

.footer-navbar
  background-color $secondary-color
  min-height 35px
  color $white-font
  line-height 35px
  .right-elements
    float right
    img
      margin-left 15px

h1,h2,h3,h4,h5,h6
  color $title-font


// **************************************
// Sign up styles
// **************************************
.progress-counter
  border-top 2px solid $border-color
  margin-bottom 50px
  position relative
  .progress-item
    position absolute
    top -14px
  .complete-state
    text-align center
    font-size 35px
    line-height 25px
    span
      background-color #ffffff
      padding-left 3px
      padding-right 3px
  .step1
    left -20px
  .step2
    left 16%
  .step3
    left 41%
  .step4
    left 69%
  .step5
    right -20px
  .complete
    color $title-font
  .current
    color $main-font
  .outstanding
    color $inactive-font

// **************************************
// some generic functions
// **************************************
vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

::-webkit-input-placeholder
  font-style normal

::-moz-placeholder
  font-style normal

:-ms-input-placeholder
  font-style normal

// **************************************
// form styles
// **************************************
.movements-form

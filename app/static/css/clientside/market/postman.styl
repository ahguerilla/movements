.conv_link
  cursor pointer

.messageavatar>img
  border-radius 50%
  margin-top 3px

#conversation-cont
  display none
  .breadcrumb
    background-color #fff

#messagelist
 hr
    margin-top 5px
    margin-bottom 5px

#conversation
  background white
  .panel-footer
    background white
  a
    color $text-color
  a:hover
    text-decoration none

#postman_message
  #back
    visibility hidden;
  hr
    margin-top 5px
    margin-bottom 5px

.messagelist
  a
    text-decoration none
  .messageavatar
    width: 60px
    float: left
    input
      vertical-align: middle
  .message-well
    background-color
    padding: 0px
    height: 47px
    overflow: hidden
    border-top: 1px solid $border-color
  .message:last-child
    .message-well
      border-bottom: 1px solid $border-color
  .sender
    line-height 47px
  .subject
    white-space: nowrap;
    overflow: hidden;
    line-height 47px
    text-overflow ellipsis

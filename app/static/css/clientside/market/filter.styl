@import 'site-xs'


.exchange-filter
  color: #FFF
  background-color: $filter-background
  //min-height: 40px
  //padding-bottom: 10px
  .filterbuttons-cont
    max-height 250px
    margin-bottom 5px;
    overflow-y: scroll;
    margin-top 5px
    overflow-x hidden
  .market-filter-main
    position: relative
    .filter-action
      margin-bottom: 10px
    .market-filter-border
      border-right: 1px solid #FFF
      position: absolute
      //margin-top: 10%
      height: 100%
      right: 0
    .first
      margin-top: 20px
    .market-action:hover
      cursor: pointer
  .filter-title
    text-align: center
    margin-bottom: 2px
    //margin-top: 2px
  .filter-show
    margin-top:10px
    text-align: right
  .filter-tag
    .btn-success
      color: #FFF
      background-color: $filter-item-selected
      border-color: $filter-item-selected
    .btn-success:hover,
    .btn-success:focus,
    .btn-success:active,
    .btn-success.active,
    .open .dropdown-toggle.btn-success
      border-color: #3a3a3a;

.filter-bulk-selector.btn-default.active
    background-color #444d54
    color white
    border-color #444d54



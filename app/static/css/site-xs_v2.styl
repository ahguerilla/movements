$page-banner-height-xs = 350px

@media (max-width: 767px)
  .hiddenxs
    display none !important
  .movements-form input,
  .movements-form select,
  .movements-form textarea,
  .twitter-typeahead .tt-hint
    font-size 14px
  .navbar
    min-height 50px
  .navbar-header-top
    .main-logo
      margin-top 8px
      margin-left 15px
    .navbar-nav > li, .navbar-nav > li:last-child
      border-left none
      border-right none
    .navbar-toggle
      margin-top 0
      margin-bottom 0
      padding 0
    .user-info
      padding-top 0
      margin-bottom 10px
      font-size 16px
  #collapse-menu
    li
      text-align right
      margin-right 0
      a
        line-height 35px
      .open-account
        margin-bottom 10px
      .dropdown-flag
        img
          float right
          margin-left 20px
          padding-top 4px
    .dropdown-menu
      li
        a
          line-height 30px
  .navbar-collapse
    max-height inherit
  .homepage-footer
    .footer-nav
      font-size 14px
      height 50px
      padding 7px 15px
  footer
    .footer-copyright
      text-align center
    .footer-nav-content
      text-align center
      margin-top 15px
  .progress-counter .step2
    left 39%
  .progress-counter .step3
    left 67%
  .view-post
    .post-date
      margin 10px 0
    .edit-post
      margin-top 0
      margin-bottom 10px
    .how-you-can-help
      margin 0 0 10px 0
    .caution-text
      line-height: inherit
      margin-right 10px
  .landing-page-center-content-wrap
    .landing-page-center-content
      margin-top 55px
      .landing-page-middle
        h2
          font-size 20px
          min-height auto
  .poster
    .post-direct-action
      text-align left
  .movements-form
    .action-text
      margin-top 0
  .settings-bar
    .nav-menu-item
      width 70px
    .nav-icon
      margin-right 1px
      margin-left 1px
      width 70px
  .settings-form
    .change-avatar
      text-align center
  #marketitems, #stuck-marketitems
    .market-place-item
      .post-image
        height inherit
        position static
        float left
        margin-right 10px
    .market-place-item.with-image, #stuck-marketitems .market-place-item.with-image
      padding-left 15px
  .success-stories
    .success-storey
      text-align center
      .success-story-image
        margin-bottom 15px

@media (min-width: 767px)
  .visiblexs
    display: none
  .partner-section
    .collapse-non-xs
      height auto
      display block

@media (min-width: 1350px)
  .citation
    .citation-wrap
      padding 0 140px

@media (max-width: 1200px)
  .citation
    .first-sm
      border-left 0

@media (max-width: 991px)
  .movements-form
    padding 25px 15px 25px 15px
  .extended-form
    padding 0 15px 0 15px
  .stats-banner
    bottom 15px
    right 15px
  .toggle-menu-container
    padding-top 0
    .left-navigation.toggled
      display none
  .exchange-filters
    .filter-post-types
      text-align center
      .type-menu
        margin 15px 0
    .categories
      text-align center
  .view-post
    .post-images
      img
        max-width 100%
  .settings-form
    .btn-group-settings
      .btn
        font-size 12px

@media (max-width: 767px)
  .citation
    h4
     padding 0
    .first-xs
      border-left 0

@media(max-width: 440px)
  body
    font-size 14px
  footer
    font-size 12px
  h1
    font-size 26px
  .progress-counter
    .progress-item-description
      font-size 11px
  .form-select-multi .select-label
    font-size 11px
  .form-select-multi .select-multi-checkbox .select-label,
  .form-select-multi .select-multi-checkbox.checked .select-label
    font-size 14px
  .settings-form
    .btn-group-settings
      .btn
        font-size 10px
        padding 13px 3px
  .homepage-button
    height 35px
    button
      font-size 14px
      height 40px
  .home-login-form
    .login-form-title
      font-size 16px
    .login-form-title.social
      margin-bottom 5px
      margin-top 5px

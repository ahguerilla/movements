$bg-color = #f4f4f4
$text-color = #596066
$header-text = #a3a3a3
$border-color = #e7e7e7
$warn-color = #ff0000
$filter-background = #585F65
$dialog-bg-color = rgba(255, 255, 255, 0.69)
$warning-bg-color = rgba(185, 74, 72, 0.69)
$std-border-radius = 10px

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

::-webkit-input-placeholder
  font-style italic

::-moz-placeholder
  font-style italic

:-ms-input-placeholder
  font-style italic  

/******************************************************************************
 * Bootstrap overloads
 */

.navbar-default
  background-color $bg-color

.navbar
  margin-bottom 0

body
  background-color $bg-color

.form-group
  margin-bottom 5px

.btn
  border-radius $std-border-radius  
  color $text-color

.narrow .container
  max-width 970px

.alert
  border-radius 15px

/******************************************************************************
 * Site styles
 */

body
  color $text-color

h1, h2, h3, h4
  color $header-text

.hr-no-margin
  margin-bottom: 0
  margin-top: 0

.center-content
  text-align: center

.full-width
  width: 100%

.filter-fixed-width
  width: 70px

.align-right
  text-align: right  

.errorlist
  padding 0
  li 
    color $warn-color
    list-style none

.col-spacing-bottom
  margin-bottom: 15px

select.input-extra-height
  height: 90px

.item_container:hover
  cursor: pointer

.item-contents
  max-height: 101px
  overflow: hidden

.message-well
  background-color 
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05)
  padding: 9px
  height: 53px
  overflow: hidden

.hero-text
  color #fff
  font-size 2em
  margin 20px 0

.backstretch
  background-color rgba(0, 0, 0, 0.63)

.dialog
  h1
    margin-top 0
    font-size 2em
    color #59606A
  a
    color $text-color
    text-decoration underline
  padding 15px
  background-color $dialog-bg-color
  border-radius $std-border-radius

.home-logos
  .middle
    text-align center
  .right
    text-align right

.sign-up-form
  input
    border-radius $std-border-radius
    padding 20px
  label
    font-weight normal

.sign-up
  margin-top 20px
  .warning
    padding 15px
    margin-bottom 20px
    background-color $warning-bg-color
    border-radius $std-border-radius

.social-sign-up .dialog
  margin-bottom 10px
  a
    position relative
    img
      vertical-align text-bottom
      position absolute
      left 0
    color $text-color
    padding-left 30px

.exchange-banner
  background: url('../images/header-image-518x284.png') no-repeat
  background-color: #FFF

.message-text
  margin-bottom: 10px

.market-action-wrap
  margin-top: 30%
  .market-action
    padding-bottom: 10px
  .market-action:hover
    cursor: pointer

.filter-banner-spacer
  background-color: #FFF
  height: 2px

.exchange-filter
  color: #FFF
  background-color: $filter-background
  padding-bottom: 10px
  .market-filter-main
    margin-left: 20px
    position: relative
    .market-filter-border
      border-right: 1px solid #FFF
      position: absolute
      //margin-top: 10%
      height: 100%
      right: 0
    .market-action
      margin-bottom: 10px
    .first
      margin-top: 35px
    .market-action:hover
      cursor: pointer
  .filter-title
    text-align: center
    margin-bottom: 10px
    margin-top: 10px
  .filter-show
    margin-top:10px
    text-align: right

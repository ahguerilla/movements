$nav-bg-color = #f4f4f4
$text-color = #596066
$header-text = #a3a3a3
$border-color = #e7e7e7
$warn-color = #ff0000
$dialog-bg-color = rgba(255, 255, 255, 0.69)
$std-border-radius = 10px

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

/******************************************************************************
 * Bootstrap overloads
 */

.navbar-default
  background-color $nav-bg-color

.navbar
  margin-bottom 0

.btn
  border-radius $std-border-radius  
  color $text-color

/******************************************************************************
 * Site styles
 */

body
  color $text-color

h1, h2, h3, h4
  color $header-text

.hr-no-margin
  margin-bottom: 0
  margin-top: 0

.center-content
  text-align: center

.full-width
  width: 100%

.filter-fixed-width
  width: 70px

.align-right
  text-align: right  

.errorlist
  padding 0
  li 
    color $warn-color
    list-style none

.col-spacing-bottom
  margin-bottom: 15px

select.input-extra-height
  height: 90px

.item_container:hover
  cursor: pointer

.item-contents
  max-height: 101px
  overflow: hidden

.message-well
  background-color 
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05)
  padding: 9px
  height: 53px
  overflow: hidden

.hero-text
  color #fff
  font-size 2em
  margin 20px 0

.backstretch
  background-color rgba(0, 0, 0, 0.63)

.dialog
  h1
    margin-top 0
    font-size 2em
    color #59606A
  padding 15px
  background-color $dialog-bg-color
  border-radius $std-border-radius

.exchange-banner
  width: 100%
  background: url('../images/header-image-518x284.png') no-repeat

.message-text
  margin-bottom: 10px

.market-action-wrap
  margin-top: 30%
  .market-action
    padding-bottom: 10px